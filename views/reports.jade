extends layout
block content
  
  div.mainContainer
    header
      div.logo
        img.logo2(src="http://www.clker.com/cliparts/N/5/f/c/9/D/blue-security-shield-md.png")
        h1 Fortified Health
      div.nav
        h3 
          a(href='/landing') Home
        h3  
          a(href='/reports') Reports
        h3
          a(href='/logout') Logout 
        div.userInfo
          img(src=user.photo width='60px')
          p #{user.name}
    div.graph-container
      h1.graph-title
      div.form-group
        select.form-control(type="select", class="select-data")
          option.form-control(value='') Select Data
          option.form-control(value='breast-cancer' id='c01_breast') Breast Cancer Screening
          option.form-control(value='colorectal-cancer' id='c02_cancer') Colorectal Cancer Screening
          option.form-control(value='flu-vaccines' id='c03_flu_vac') Flu Vaccines
          option.form-control(value='osteoporosis-screening' id='c12_osteoporosis') Osteporosis Screening
          option.form-control(value='diabetes-eyecare' id='c13_betus_eyecare') Diabetes Eye Exams
          option.form-control(value='diabetes-kidneycare' id='c14_betus_kidneycare') Diabetes Kidney Exams
        h2.table-title Title
        div.patient-table  
          table.table.table-striped
            thead
              tr
                th Patient ID
                th Last
                th PCP
            tbody
              
          
      div.chart
    

      
